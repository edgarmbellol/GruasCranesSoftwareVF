# Configuración de Producción para VPS
# Copia este archivo como .env y ajusta los valores

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=tu-clave-secreta-muy-segura-aqui-cambiar-en-produccion
FLASK_DEBUG=False

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gruas_db
DB_USER=gruas_user
DB_PASSWORD=tu-password-seguro-aqui

# Redis Configuration (opcional para cache)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=5000

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
