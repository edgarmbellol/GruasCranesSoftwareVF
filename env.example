# Configuración para GRÚAS CRANES S.A.S
# Copia este archivo como .env y configura tus valores

# URL base del servidor (IMPORTANTE para códigos QR)
# Para desarrollo local:
# BASE_URL=http://localhost:5000
# Para VPS/producción:
# BASE_URL=https://tu-dominio.com
# o
# BASE_URL=https://tu-ip-vps.com

BASE_URL=http://localhost:5000

# Clave secreta para sesiones (cambiar en producción)
SECRET_KEY=tu-clave-secreta-muy-segura-aqui

# Configuración de base de datos
# Para SQLite (desarrollo):
# DATABASE_URL=sqlite:///gruas_cranes.db

# Para PostgreSQL (producción):
# DATABASE_URL=postgresql://usuario:password@localhost:5432/gruas_cranes

# Para MySQL (producción):
# DATABASE_URL=mysql://usuario:password@localhost:3306/gruas_cranes

DATABASE_URL=sqlite:///gruas_cranes.db

# Configuración de archivos
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Configuración de entorno
FLASK_ENV=development
FLASK_DEBUG=True